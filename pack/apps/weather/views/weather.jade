extends /layout

block declarations
    - additional_title     = lingua.weather;
    - body_class            = 'appWeather';
    - include_remote       = true;

block additional_css
    link(rel='stylesheet', href='/weather/css/style.css')

block additional_scripts
    script(src="/weather/js/jquery.mcjs.weather.js")
    script.
        $(function(){
            $('body').mcjs();
            $('body').mcjsw();
        });

block body
    #backdrop
        img.backdropimg.fullscreen(src="/core/css/img/backdrop.png")
    header
        .container
            .row
                .col-md-12
                    a.backlink(href="/") &#xe113;
                    h1
    .infoPanel
        .current
            h2
            .degrees
            .feelslike
            .weathertype
                .icon
                .text
        ul.forecast
        div(style="clear: both;")
