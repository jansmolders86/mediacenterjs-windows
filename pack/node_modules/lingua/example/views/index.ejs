<!doctype html> 
<html> 
    <head> 
        <title><%= lingua.title %></title>

        <link rel="stylesheet" type="text/css" href="stylesheets/screen.css" />
    </head>
    <body>
        <div id="wrapper">
            <nav>
                <ul>
                    <li><a href="?language=de-de"><%= lingua.navigation.german %></a></li>
                    <li><a href="?language=en"><%= lingua.navigation.english %></a></li>
                </ul>        
            </nav>

            <article>
                <header>
                    <hgroup>
                        <h1><%= lingua.headline %></h1>
                        <h2><%= lingua.subheadline %></h2>
                    </hgroup>
                </header>

                <p><%= lingua.greeting(person) %></p>
            </article>
        </div>

        <footer>
            <small>&copy; 2012, <a href="http://profile.lochkartenstanzer.de">André König</a> - <a href="http://www.opensource.org/licenses/mit-license.php"><%= lingua.licence %></a></small>
        </footer>
    </body>
</html>